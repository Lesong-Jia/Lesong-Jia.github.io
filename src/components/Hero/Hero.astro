---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

import heroImage from "@images/Cover_V3.png";
import { Icon } from "astro-icon/components";
import heroImageMobile from "@images/Cover_V3.png";
import { Image } from "astro:assets";
---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full flex-col">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full overflow-hidden">
		<div class="absolute inset-0 bg-black/10" aria-hidden="true"></div>

		<Image
			src={heroImage}
			class="hidden h-auto min-h-full w-full object-cover object-bottom brightness-101 sm:block"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			height={1400}
		/>
		<Image
			src={heroImageMobile}
			class="h-auto min-h-full w-full object-cover brightness-101 sm:hidden"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			width={1200}
		/>
	</div>

	<!-- hero items -->
	<div class="site-container relative mt-auto w-full gap-10 pb-16 text-center md:pb-24">
		<!-- Hero text -->
		<div class="text-base-50 my-auto mx-auto max-w-full flex-col">
			<h1
				class="font-heading-1 text-4xl font-semibold text-pretty md:text-7xl md:leading-tight"
			>
				“凡可说者，皆可说清”
			</h1>

			<h2
				class="mt-10 font-heading-2 text-3xl font-semibold text-pretty md:mt-8 md:text-6xl md:leading-tight"
			>
				让我们一起探索自然人机交互的语言边界
			</h2>

			<div class="mt-10 flex justify-center" aria-hidden="true">
				<Icon
					name="mynaui/arrow"
					class="h-10 w-10 -rotate-0 text-white opacity-90 md:h-14 md:w-14"
					aria-hidden="true"
				/>
			</div>
		</div>
	</div>
</section>
