---
/**
 * SelfIntro section: text on the left, image on the right.
 * Edit the content below or pass props to customize.
 */

import { Image } from "astro:assets";

// Default image; change this import to use another image from @images
import defaultImage from "@images/Self_Photo.jpg";

interface Props {
	imageSrc?: ImageMetadata;
	title?: string;
	description?: string;
}

const { imageSrc = defaultImage, title = "About", description = "Add your introduction text here." } = Astro.props;
---

<section id="self-intro" class="bg-base-100 scroll-mt-10 py-8 md:py-12">
	<div class="site-container">
		<div class="flex flex-col items-center gap-8 md:flex-row md:items-center md:gap-12 lg:gap-16">
			<!-- Left: text -->
			<div class="flex flex-1 flex-col justify-center">
				<h2 class="h2 text-pretty">{title}</h2>
				<p class="description mt-4 max-w-prose text-base leading-relaxed md:mt-6 md:text-lg">
					{description}
				</p>
				<slot />
			</div>
			<!-- Right: image -->
			<div class="min-w-0 w-full shrink-0 overflow-hidden md:max-w-xs md:w-80">
				<Image
					src={imageSrc}
					alt=""
					class="max-h-full max-w-full object-contain"
					width={960}
				/>
			</div>
		</div>
	</div>
</section>
